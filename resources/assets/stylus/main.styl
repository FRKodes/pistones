naranja = #F5841F
turquesa = #02E0E1
.chunk
	font-family 'chunkfiveroman'
.naranja
	color naranja
h1.chunk
	font-size 2.4em
	text-align center
	line-height .8em
	span
		color naranja
		font-size .83em
h2.chunk
	font-size 1.7em
	text-align center
	span
		color naranja
		font-size 2.4em
	span.two
		color black
		font-size 1.3em
iframe
	width 100%
	height auto
	display block

body
	background transparent url(../../images/background.jpg) repeat center top
	color black
	font-family 'Lato', sans-serif
.navbar-default
	background transparent
	border none
	font-family chunkfiveroman
	transition background 1s ease
	&.shadow
		background rgba(black, .85)
		transition background 1s ease
	.navbar-toggle
		border none
		.icon-bar
			background white
			border-radius 2px
			height 4px
			width 25px
.navbar-brand span
	font-size .7em

.banner-video
	background transparent url(../../images/franquicia.jpg) no-repeat 45.7% top
	background-size cover
	height 400px
	overflow hidden
	position relative
	.play
		background rgba(white, .7)
		border-radius 50%
		height 80px
		left 50%
		margin-left -40px
		margin-top -40px
		position absolute
		text-align center
		top 50%
		vertical-align middle
		width 80px
	.burger-love
		bottom -70px
		height auto
		overflow hidden
		position absolute
		text-align center
		width 90%
		img
			width 285px
.text-container
	background white
	margin-bottom 30px
	margin-top 30px
	&.beerday
		.title img
			margin-top -60px
		p
			margin-top -80px
	.title
		padding 0
		text-align center
		img
			height auto
			width 90%
	p
		padding 15px
.product-slider
	img
		display block
		height auto
		width 100%
.metanle-tuuurbo
	background transparent url(../../images/metanleturbo.jpg) no-repeat center center
	height 300px
	text-align center
	img
		width 300px

/*filosofÃ­a*/

.inner-banner
	height 300px
	background black
	text-align center
	background-size cover
	&.filosofia
		background transparent url(../../images/filosofia.jpg) no-repeat center top
	&.acercade
		background transparent url(../../images/acerca_de.jpg) no-repeat center top
	&.clubpistones
		background transparent url(../../images/clubpistones.jpg) no-repeat center top
	&.cocina
		background transparent url(../../images/cocina.jpg) no-repeat center top
	.inner-title
		margin-top 150px

/*Acerca de*/
.container.space
	margin-bottom 20px	
	margin-top 20px
.container.black
	background black
	color white
	margin-top 30px
	margin-bottom 30px
	padding-bottom 20px
	.text-container
		background black
	h1.nuestra
		font-size 3.6em
		background black
		span.naranja
			font-size 1em
h2.concepto
	font-size 2.7em
	
/*Club Pistones*/
