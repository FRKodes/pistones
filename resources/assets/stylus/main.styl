	.text-container
		background white
		&.black
			background black
	h1
		font-size 2.3em
		background white
		line-height 1.2em
		span.naranja
			font-size 1.6em
.text-container.black
	background black
	color white
	padding-top 10px
	padding-bottom 10px
	h2.conoce
		font-size 2.4em
