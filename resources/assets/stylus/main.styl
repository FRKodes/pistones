			font-size 1.05em

/*cocina*/
.adictiva
	.last
		margin-top -30px
		padding-bottom 20px
.back_naranja
	background naranja
	color white
	h1
		background naranja
		img
			width 100%
.estrellas
	width 98%
.text-container
	img
		width 100%
		margin-top -50px
h2.chunk.botana
	font-size 2.6em
	
h2.chunk.antoja
	font-size 2.1em
	span
		font-size 1.3em
	
footer
	background rgba(black, .85)
	height auto
	margin-top 40px
	overflow hidden
	text-align center
	img
		width 300px
	ul.social
		padding 0
		margin-top -70px
		li
			display inline-block
			font-size 3em
			margin 0 2px
		a
			color naranja
	.disclaimer
		border-top 1px solid white
		color white
		width 90%
		margin 0 auto
		padding 30px 0
		a
			color turquesa

